					if (inputSearch != '') {
						$.ajax({
							dataType : "JSON",
							type : "POST",
							url : "http://localhost:3000/getSubjectSuggestions",
							data : dataString,
							cache : false,
							success : function(data) {
								$("#suggest").text(data.sugg);
								$("#progId").val(data.percent);
								var val=parseInt(data.percent);
								$("#progVal").html(val+"%");
							}
						});
